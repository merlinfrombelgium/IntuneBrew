# Azure AD App Registration details
AZURE_APP_ID=your-app-id-here
AZURE_TENANT_ID=your-tenant-id-here

# Certificate configuration
# Windows: Use certificate thumbprint from certificate store
AZURE_CLIENT_CERT_THUMBPRINT=your-certificate-thumbprint-here

# Linux/Mac: Use PEM file path (comment out if using Windows)
# AZURE_CLIENT_CERT_PATH=path/to/your/certificate.pem

# API Configuration
API_PORT=3001
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api

# CORS Configuration (frontend URL)
CORS_ORIGIN=http://localhost:5173

# GitHub Configuration (for fetching app data)
GITHUB_RAW_CONTENT_URL=https://raw.githubusercontent.com/ugurkocde/IntuneBrew/main/Apps

# Logging
LOG_LEVEL=info

# Optional: Database configuration (if you decide to use one later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=intunebrew
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password 